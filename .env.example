# MNCHS Grade Portal - API Security Configuration
# Copy this to .env file and update with your settings

# ========================================
# JWT (JSON Web Token) Configuration
# ========================================

# Secret key for JWT signing (IMPORTANT: Change this in production!)
# Must be at least 32 characters long
JWT_SECRET=MNCHS_Grade_Portal_Secret_Change_This_In_Production_12345

# Token expiration time in seconds (default: 24 hours)
JWT_EXPIRATION=86400

# ========================================
# API Configuration
# ========================================

# Maximum number of API requests per user/IP
API_RATE_LIMIT=100

# Time window for rate limiting in seconds (1 hour)
API_RATE_WINDOW=3600

# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://localhost,http://localhost:8000,https://yourdomain.com

# ========================================
# Webhook Configuration
# ========================================

# Secret key for webhook signature verification
WEBHOOK_SECRET=webhook_secret_change_this_in_production

# ========================================
# Database Configuration (Existing)
# ========================================

DB_HOST=localhost
DB_USERNAME=root
DB_PASSWORD=password
DB_NAME=mnchs_grade_portal
DB_PORT=3306

# ========================================
# Email Configuration (Optional)
# ========================================

# For sending notifications and alerts
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@mnchs.edu.ph
MAIL_FROM_NAME=MNCHS Grade Portal

# ========================================
# Security Configuration
# ========================================

# Enable HTTPS only (true/false)
FORCE_HTTPS=true

# Session timeout in seconds (30 minutes)
SESSION_TIMEOUT=1800

# Enable debug mode (true/false) - FALSE in production
DEBUG_MODE=false

# ========================================
# File Upload Configuration
# ========================================

# Maximum file upload size in bytes (10MB)
MAX_FILE_SIZE=10485760

# Allowed file types for uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,txt,csv,jpg,jpeg,png,gif

# Upload directory
UPLOAD_DIR=/storage/uploads

# ========================================
# Logging Configuration
# ========================================

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# Log directory
LOG_DIR=/storage/logs

# ========================================
# Application Configuration
# ========================================

# Application name
APP_NAME=MNCHS Grade Portal

# Application version
APP_VERSION=1.0.0

# Application URL
APP_URL=http://localhost/MNCHS Grade Portal

# Environment (development, staging, production)
APP_ENV=development

# ========================================
# Third-party API Integrations
# ========================================

# Example: Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# Example: SMS Gateway Configuration (for notifications)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=MNCHS

# Example: Email Service Configuration
EMAIL_SERVICE_API_KEY=your_email_service_key

# ========================================
# Backup Configuration
# ========================================

# Backup database daily (true/false)
ENABLE_DAILY_BACKUPS=true

# Backup directory
BACKUP_DIR=/storage/backups

# Keep backups for N days
BACKUP_RETENTION_DAYS=30
